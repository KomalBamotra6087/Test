<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/parking_logo</item>
        <item name="android:statusBarColor" ns1:targetApi="l">?attr/colorPrimary</item>
    </style>
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="Theme.SmartParking" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
    </style>
    <style name="Theme.SmartParking.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">#212121</item>
    </style>
    <style name="ToolBarStyle" parent="Theme.SmartParking">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@android:color/black</item>

    </style>
</resources>